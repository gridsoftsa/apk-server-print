<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="?attr/selectableItemBackground"
    android:gravity="center_vertical">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_usb"
        android:layout_marginEnd="12dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/printerNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Impresora USB"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/printerDetailsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="USB Device: /dev/usb/lp0"
            android:textColor="@color/text_secondary"
            android:textSize="12sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/printerStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="âœ“"
        android:textColor="@color/accent_success"
        android:textSize="16sp"
        android:background="@color/background_success"
        android:padding="4dp"
        android:minWidth="24dp"
        android:gravity="center" />

</LinearLayout>