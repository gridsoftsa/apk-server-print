<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    android:fillViewport="true"
    tools:context=".MainActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- ðŸŽ¯ HEADER MINIMALISTA -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="32dp">
        
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginEnd="16dp" />
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GridPOS Printer"
                android:textColor="@color/text_primary"
                android:textSize="24sp"
                android:textStyle="bold" />
                
            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Iniciando..."
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />
                
        </LinearLayout>
        
    </LinearLayout>

    <!-- ðŸŽ¯ CARD: TIPO DE IMPRESORA -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/background_secondary"
        android:padding="20dp"
        android:layout_marginBottom="16dp"
        style="@style/CardStyle">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo de Impresora"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <Spinner
            android:id="@+id/printerTypeSpinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/spinner_background"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/selectedPrinterText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Impresora seleccionada: Ninguna"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:background="@color/background_info"
            android:padding="8dp" />

    </LinearLayout>

    <!-- ðŸŽ¯ CARD: CONEXIÃ“N -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/background_secondary"
        android:padding="20dp"
        android:layout_marginBottom="16dp"
        style="@style/CardStyle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ConexiÃ³n USB"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold" />
                
            <TextView
                android:id="@+id/ipAddressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="192.168.1.100:12345"
                android:textColor="@color/accent_primary"
                android:textSize="12sp"
                android:background="@color/background_success"
                android:padding="4dp"
                android:clickable="true"
                android:focusable="true" />
                
        </LinearLayout>

        <TextView
            android:id="@+id/activePrinterText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ninguna conectada"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:background="@color/background_warning"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/btnRefreshPrinters"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Buscar"
                style="@style/ButtonSecondary" />

            <Button
                android:id="@+id/btnConnectPrinter"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Conectar"
                style="@style/ButtonPrimary" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/printersRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="120dp"
            android:visibility="gone" />

    </LinearLayout>

    <!-- ðŸŽ¯ CARD: PRUEBAS -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/background_secondary"
        android:padding="20dp"
        android:layout_marginBottom="16dp"
        style="@style/CardStyle">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pruebas de ImpresiÃ³n"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnSDKText"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="ðŸ“ Texto"
                android:textSize="12sp"
                style="@style/ButtonTest" />

            <Button
                android:id="@+id/btnSDKQR"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="ðŸ“± QR + Caja"
                android:textSize="12sp"
                style="@style/ButtonTest" />

            <Button
                android:id="@+id/btnSDKInvoice"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="ðŸ§¾ Factura"
                android:textSize="12sp"
                style="@style/ButtonTest" />

        </LinearLayout>

        <!-- Botones adicionales en una segunda fila -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnTestCash"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="ðŸ’° Caja"
                android:textSize="12sp"
                style="@style/ButtonTest" />

            <Button
                android:id="@+id/btnTestImage"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="ðŸ–¼ï¸ Imagen"
                android:textSize="12sp"
                style="@style/ButtonTest" />

            <Button
                android:id="@+id/btnClearLog"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="ðŸ—‘ï¸ Limpiar"
                android:textSize="12sp"
                style="@style/ButtonTest" />

        </LinearLayout>

    </LinearLayout>

    <!-- ðŸŽ¯ CARD: LOG -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/background_secondary"
        android:padding="20dp"
        style="@style/CardStyle">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Actividad del Sistema"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <ScrollView
            android:id="@+id/logScrollView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/background_code"
            android:padding="12dp">

            <TextView
                android:id="@+id/logText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sistema iniciado...\n"
                android:textColor="@color/text_code"
                android:textSize="11sp"
                android:fontFamily="monospace"
                android:lineSpacingExtra="2dp" />

        </ScrollView>

    </LinearLayout>

</LinearLayout>

</ScrollView>