<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- 🎨 TEMA BASE MINIMALISTA -->
    <style name="Theme.PuenteImpresora" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/accent_primary</item>
        <item name="colorPrimaryDark">@color/accent_secondary</item>
        <item name="colorAccent">@color/accent_success</item>
        <item name="android:colorBackground">@color/background_primary</item>
        <item name="android:statusBarColor">@color/background_primary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <!-- 🃏 ESTILO DE CARDS -->
    <style name="CardStyle">
        <item name="android:background">@color/background_secondary</item>
        <item name="android:elevation">2dp</item>
    </style>

    <!-- 🔘 BOTONES PRIMARIOS -->
    <style name="ButtonPrimary" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/accent_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">2dp</item>
    </style>

    <!-- 🔘 BOTONES SECUNDARIOS -->
    <style name="ButtonSecondary" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/accent_primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_secondary_background</item>
    </style>

    <!-- 🧪 BOTONES DE PRUEBA -->
    <style name="ButtonTest" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/accent_secondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@drawable/button_test_background</item>
        <item name="android:minHeight">40dp</item>
    </style>

</resources>